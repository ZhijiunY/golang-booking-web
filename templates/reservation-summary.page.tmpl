{{template "base" .}}

{{define "content"}}

    {{$res := index .Data "reservation"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text-center" mt-5>reservation <em>summary</em> page</h1>

                <hr>

                <table class="table table-striped">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <td>Name:</td>
                            <td>{{$res.FirstName}} {{$res.LastName}}</td>
                        </tr>
                        <tr>
                            <td>Arrival:</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Departure:</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>EmailAddress:</td>
                            <td>{{$res.EmailAddress}}</td>
                        </tr>
                        <tr>
                            <td>PhoneNumber:</td>
                            <td>{{$res.PhoneNumber}}</td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
{{end}}
